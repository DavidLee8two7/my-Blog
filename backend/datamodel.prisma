enum Permission {
  ADMIN
  USER
  BLOGCREATE
  BLOGUPDATE
  BLOGDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Blog {
  id: ID! @unique
  title: String!
  scientific: String
  effect: String!
  reference: String
  image: String
  largeImage: String
}

type Skill {
  id: ID! @unique
  title: String!
  tech: [String]!
  image: String
  largeImage: String
}

type Memo {
  id: ID! @unique
  name: String!
  email: String!
  subject: String!
  message: String!
}
